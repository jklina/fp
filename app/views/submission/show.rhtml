<h2><%= h(@submission.title) %> by <%= @submission.users.collect { |u| link_to(h(u.username), {:controller => "/user", :action => "show", :id => u}) }.to_sentence %> in <%= link_to(h(@submission.category.title), {:controller => "/browse", :action => "category", :id => @submission.category.id}) %></h2>

<div id="submission" class="shadow">
    <div><%= link_to image_tag(@submission.sub_image.public_filename(:thumb)), @submission.sub_image.public_filename %></div>
</div>

<div class="toolbox">
    <img src="/images/silk/magnifier_zoom_in.gif" alt="" />
    <%= link_to "View Original Image", @submission.sub_image.public_filename %> (<%= h(@submission.sub_image.width) %> x <%= h(@submission.sub_image.height) %>)
    <br />
    <% if @submission.sub_file %>
        <%= link_to( image_tag("/images/silk/application_get.gif"), @submission.sub_file.public_filename) %>
        <%= link_to( "Download", :action => 'download', :id => @submission) %>
    <% end %>
    <% if @userIsOwner %>
        <br />
        <%= link_to(image_tag("silk/application_edit.gif"), :action => 'edit', :id => @submission) %>
		<%= link_to "Edit", :action => 'edit', :id => @submission %>
        <br />
        <%= link_to(image_tag("silk/application_delete.gif"), :action => 'move_to_owners_trash', :id => @submission) %>
		<%= link_to "Trash", :action => 'move_to_owners_trash', :id => @submission %>
    <% end %>
</div>

