<h2>Artist Notes</h2>
<div id="artist_notes">
    <div id="meta">
        Submitted: <%=h @submission.created_on.to_s(:submission) %><br />
        Comments: <%=h @submission.comments.count.to_s %><br />
        Views: <%=h @submission.views %><br />
        Downloads: <%=h @submission.downloads %><br />
        <%= link_to_if(@submission.ratings, "Admin Rating:",{ :action => 'list_moderator_ratings', :id => @submission }) %> <%=h number_with_precision(@submission.average_admin_rating.to_s, 2) %><br />
		<%= link_to_if(@submission.ratings, "Rating:",{ :action => 'list_ratings', :id => @submission }) %> <%=h number_with_precision(@submission.average_rating.to_s.to_s, 2) %><br /> 
    </div>
    <div><%= h(@submission.description) %></div>
    <div style="clear: both;"></div>
</div>

<div id="comments">
<%= render(:partial => "comment/comment", :collection => @comment_list) %>
</div>

<% if @logged_in_user %>
<% if @user_has_rated %>
<%= render(:partial => "rating/update_rating_form") %>
<% else %>
<%= render(:partial => "rating/create_rating_form") %>
<% end %>

<%= render(:partial => "comment/comment_form") %>

<% else %>

<p>Please <%= link_to "login", :controller => "session", :action => "new" %> or <%= link_to "register", :controller => "user", :action => "register" %> to post comments and rate submissions!</p>

<% end %>

<% if @logged_in_user && @logged_in_user.is_authorative_user? %>
<%= link_to 'Add to Featured', :controller => '/admin/feature', :action => 'add_to_featured_cart', :id => @submission %> |
<%= link_to 'Move to Moderated Trash', :controller => '/admin/submission', :action => 'move_to_moderator_trash', :id => @submission %> |
<% end %>
<%= link_to 'Back', :action => 'list' %>
