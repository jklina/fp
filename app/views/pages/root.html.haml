- if @feature
  .feature
    %h2 Featured
    %p.preview= link_to image_tag(@feature.preview.url(:large)), featured_path(@feature)
    .textile
      = RedCloth.new(@feature.comment + " &mdash; chosen by #{link_to h(@feature.user.username), user_path(@feature.user)}").to_html.html_safe
%h2 Recent Submissions
= render :partial => "submissions/submission", :collection => @submissions
%p.pagination= will_paginate @submissions, :container => false
