<div id="featured" class="shadow">
	<div>
		<%= link_to image_tag(feature.preview.url(:large)), feature_path(feature) %>
		<br />
		<span class="description">
		<br />
			<%= RedCloth.new(feature.comment).to_html %> chosen by <%= link_to h(feature.user.username), user_path(feature.user) %>
		</span>
	</div>
</div>
