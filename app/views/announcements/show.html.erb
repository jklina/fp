<%= render :partial => @announcement -%>

<% if has_authority? -%>
<ul>
<li><%= link_to 'Edit this announcement', edit_announcement_path(@announcement) -%></li>
<li><%= link_to 'Delete this announcement', announcement_path(@announcement), :method => :delete -%></li>
</ul>
<% end -%>

<h3>User Comments</h3>
<%= render :partial => "comments/comment", :collection => @comments -%>

<% if logged_in? -%>
<% form_for @comment, :url => commentable_url(@announcement) do |f| -%>
<%= render :partial => "comments/form", :locals => { :f => f } -%>
<p><%= submit_tag "Publish your comment" %></p>
<% end -%>
<% else -%>
<p><%= link_to "Log in", login_path -%> or <%= link_to "register", register_path -%> to post comments!</p>
<% end -%>
