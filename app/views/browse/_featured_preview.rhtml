<div class="featured_preview">
  <% unless featured_preview.featured_image == nil  %>
    <%= link_to image_tag(featured_preview.featured_image.public_filename(:tiny)), :controller => 'feature', :action => 'show', :id => featured_preview %>
  <% end %>
  <p class="featured_preview_text"><%= link_to (h(featured_preview.user.username), :controller => 'user', :action => 'show', :id => featured_preview) %></p>
</div>
  
